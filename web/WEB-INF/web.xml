<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <listener>
        <description>
            listener
        </description>
        <listener-class>
            listeners.WebAppContextListener
        </listener-class>
    </listener>
    <context-param>
        <param-name>
            dbUrl
        </param-name>
        <param-value>
            jdbc:derby://localhost:1527/SecondoProgetto; user=root; password=root;
        </param-value>
    </context-param>
    <servlet>
        <servlet-name>ControlServlet</servlet-name>
        <servlet-class>servlets.ControlServlet</servlet-class>
        <init-param>
            <param-name>
                avatarsTmp
            </param-name>
            <param-value>
                avatars
            </param-value>
        </init-param>
        <init-param>
            <param-name>
                groupsDir
            </param-name>
            <param-value>
                groupsStorage
            </param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>SendMailRecoveryPwd</servlet-name>
        <servlet-class>servlets.SendMailRecoveryPwd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveUser</servlet-name>
        <servlet-class>servlets.SaveUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadUsers</servlet-name>
        <servlet-class>servlets.LoadUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateGroup</servlet-name>
        <servlet-class>servlets.CreateGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LandingPage</servlet-name>
        <servlet-class>servlets.LandingPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcceptInvitations</servlet-name>
        <servlet-class>servlets.AcceptInvitations</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModeratorPage</servlet-name>
        <servlet-class>servlets.ModeratorPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupsPage</servlet-name>
        <servlet-class>servlets.GroupsPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GoToGroup</servlet-name>
        <servlet-class>servlets.GoToGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifyGroup</servlet-name>
        <servlet-class>servlets.ModifyGroup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControlServlet</servlet-name>
        <url-pattern>/ControlServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendMailRecoveryPwd</servlet-name>
        <url-pattern>/SendMailRecoveryPwd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveUser</servlet-name>
        <url-pattern>/SaveUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadUsers</servlet-name>
        <url-pattern>/LoadUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateGroup</servlet-name>
        <url-pattern>/CreateGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LandingPage</servlet-name>
        <url-pattern>/LandingPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcceptInvitations</servlet-name>
        <url-pattern>/AcceptInvitations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModeratorPage</servlet-name>
        <url-pattern>/ModeratorPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupsPage</servlet-name>
        <url-pattern>/GroupsPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GoToGroup</servlet-name>
        <url-pattern>/GoToGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyGroup</servlet-name>
        <url-pattern>/ModifyGroup</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>

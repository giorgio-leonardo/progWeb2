        <title>Programmazione web. Secondo progetto.</title>
        <link href="dist/css/bootstrap.css" rel="stylesheet">
        <link href="dist/css/signin.css" rel="stylesheet">
    </head>

    <body>
        
        <div class="container">
            <form class="form-signin" action="Login" method="post" name="data">
                <h2 class="form-signin-heading">Please login</h2>

                <input type="hidden" name="op" value="login">
                <input type="text" class="form-control" placeholder="User name" name="userName" autofocus>
                <input type="password" class="form-control" placeholder="Password" name="userPwd">
                <table>
                    <tr>
                        <td width="50%">
                            <button class="btn btn-lg btn-primary btn-block" name="btn" value="login" type="submit">Accedi</button>
                        </td>
                        <td width="50%">
                            <button class="btn btn-lg btn-primary btn-block" name="btn" value="register" type="submit">Registrati</button>
                        </td>
                    </tr>
                </table>
                
            </form>
        </div>
    </body>

